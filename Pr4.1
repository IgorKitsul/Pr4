            група.ДодатиСтудента(new Студент("Петро Андрiйович", "А123459", new int[] { 95, 92, 88, 85, 90 }));
            група.ДодатиСтудента(new Студент("Анатолiй Коваленко", "А123459", new int[] { 77, 93, 78, 85, 60 }));
            група.ДодатиСтудента(new Студент(" Роман Романенко", "А123459", new int[] { 21, 21, 100, 45, 70 }));
            група.ДодатиСтудента(new Студент("Олен Коваленко", "А123459", new int[] { 76, 22, 48, 85, 23 }));
            група.ДодатиСтудента(new Студент("Сергiї Сергiєнко", "А123459", new int[] { 94, 85, 88, 77, 30 }));
            група.ДодатиСтудента(new Студент("Максим Максименко", "А123459", new int[] { 23, 74, 54, 23, 56 }));
            група.ДодатиСтудента(new Студент("Раман Сергiйович", "А123459", new int[] { 90, 92, 95, 90, 92 }));

            Console.WriteLine("Студенти у порядку спадання середньої оцiнки:");
            група.ВивестиСтудентів();

            double вiдсоток_добре_вiдмiнно = група.ВідсотокДобреВідмінно();
