using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
    public class Студент
    {
        public string Прізвище_Ім_я { get; set; }
        public string Номер_Залікової { get; set; }
        public int[] Оцінки { get; set; }

        public Студент(string прізвище_ім_я, string номер_залікової, int[] оцінки)
        {
            Прізвище_Ім_я = прізвище_ім_я;
            Номер_Залікової = номер_залікової;
            Оцінки = оцінки;
        }

        public double СереднійБал() => Оцінки.Average();
    }

    public class ГрупаСтудентів
    {
        public List<Студент> Студенти { get; set; }

        public ГрупаСтудентів()
        {
            Студенти = new List<Студент>();
        }

        public void ДодатиСтудента(Студент студент) => Студенти.Add(студент);

        public void ВивестиСтудентів()
        {
            var відсортовані_студенти = Студенти.OrderByDescending(s => s.СереднійБал()).ToList();

            Console.WriteLine($"{"Прiзвище та iм'я",-25}{"№ залiкової",-15}{"Середнiй бал",-12}");
            Console.WriteLine(new string('-', 52));
            foreach (var студент in відсортовані_студенти)
            {
                Console.WriteLine($"{студент.Прізвище_Ім_я,-25}{студент.Номер_Залікової,-15}{студент.СереднійБал(),-12:F2}");
            }
        }

        public double ВідсотокДобреВідмінно()
        {
            int кількість_добре_відмінно = Студенти.Count(s => s.СереднійБал() >= 75);
            return (double)кількість_добре_відмінно / Студенти.Count * 100;
        }

        public static void Main(string[] args)
        {
            var група = new ГрупаСтудентів();

            група.ДодатиСтудента(new Студент("Петро Петренко", "А123456", new int[] { 82, 90, 78, 88, 85 }));
